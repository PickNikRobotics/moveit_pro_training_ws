<root>
    <TreeNodesModel>
        <Action ID="GetAprilTagDetectionPose">
            <metadata subcategory="Perception"/>
            <description>
                <p>
                    Gets an AprilTag detection pose, if any, given a specific ID to filter by.
                </p>
            </description>
            <input_port name="apriltag_id" default="0">ID of AprilTag to look for.</input_port>
            <input_port name="apriltag_size" default="0.05">Size AprilTag to look for, in meters.</input_port>
            <input_port name="camera_info" default="{camera_info}">Camera information ROS message.</input_port>
            <input_port name="image" default="{image}">Image ROS message.</input_port>
            <output_port name="detection_pose" default="{detection_pose}">Pose of the detected AprilTag.</output_port>
        </Action>
        <Action ID="TransformPose">
            <description>
                <p>
                    Transforms a pose by specified translation and orientation values.
                </p>
            </description>
            <input_port name="input_pose" default="{input_pose}">The input pose to transform.</input_port>
            <input_port name="translation_x" default="0.0">The x translation of the transform.</input_port>
            <input_port name="translation_y" default="0.0">The y translation of the transform.</input_port>
            <input_port name="translation_z" default="0.0">The z translation of the transform.</input_port>
            <input_port name="quaternion_xyzw" default="0.0;0.0;0.0;1.0">The x, y, z, and w quaternion values of the transform.</input_port>
            <output_port name="output_pose" default="{output_pose}">The transformed pose.</output_port>
        </Action>
    </TreeNodesModel>
</root>
